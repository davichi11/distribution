<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.distribution.modules.api.dao.UserDao">
    <resultMap id="user_map" type="com.distribution.modules.api.entity.UserEntity">
        <result property="userId" column="user_id"/>
        <result property="mobile" column="mobile"/>
        <result property="username" column="username"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    <insert id="save" parameterType="com.distribution.modules.api.entity.UserEntity">
        INSERT INTO tb_user
        (
            user_id,
            `username`,
            `mobile`,
            `password`,
            `create_time`
        )
        VALUES
            (
                #{userId},
                #{username},
                #{mobile},
                #{password},
                #{createTime}
            )
    </insert>
    <update id="update" parameterType="com.distribution.modules.api.entity.UserEntity">
        update tb_user
        <set>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test="mobile != null">
                mobile = #{mobile,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
        </set>
        where user_id = #{userId,jdbcType=VARCHAR}
    </update>

    <select id="queryObject" resultType="com.distribution.modules.api.entity.UserEntity">
        SELECT *
        FROM tb_user
        WHERE user_id = #{value}
    </select>

    <select id="queryByMobile" resultType="com.distribution.modules.api.entity.UserEntity">
        SELECT *
        FROM tb_user
        WHERE mobile = #{value}
    </select>

    <select id="queryByMemberId" resultMap="user_map">
        SELECT
            user_id,
            username,
            mobile,
            password,
            create_time
        FROM tb_user u
            left join dis_member_info m on m.dis_user_id = u.user_id
        WHERE m.id = #{memberId}
    </select>

    <select id="queryList" resultType="com.distribution.modules.api.entity.UserEntity">
        SELECT * FROM tb_user
        <where>
            <if test="mobile !='' and mobile !=null">
                mobile = #{mobile}
            </if>
            <if test="username !='' and username !=null">
                username = #{username}
            </if>
        </where>
    </select>

    <select id="queryTotal" resultType="com.distribution.modules.api.entity.UserEntity">
        SELECT count(1) FROM tb_user
        <where>
            <if test="mobile !='' and mobile !=null">
                mobile = #{mobile}
            </if>
            <if test="username !='' and username !=null">
                username = #{username}
            </if>
        </where>
    </select>

    <delete id="deleteBatch">
        delete from tb_user where user_id in
        <foreach item="user_id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>